            <%for(var i = 0; i < foundblog.length;i++){%>
        <div class="row">
                
            <div class="col-lg-5">
                <img class="blog-img rounded" src="<%= foundblog[i].blogImage%>" alt="">
            </div>
            <div class="col-lg-7">
                <h2><%= foundblog[i].blogTitle%></h2>
                <p><%= foundblog[i].blogDescription.substring(0,200) %>...</p>
                
                <a href="/blog/<%= foundblog[i]._id%>" class="btn btn-success text-white">Read More</a>
            </div>
          
        </div>
