    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1>
                    <i class="fas fa-cogs"></i>
                    Dashboard <small>Manage Your Site</small></h1>
            </div>
        </div>
        <div class="col-md-2">

        </div>
    </div>
</section>

<!-- breadcrumb section -->
<section id="breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
           <li class="active"> Store Dashboard</li> 
        </ol>
    </div>
</section>

<section class="showclass">
    <div class="container">
      
              
       
        
        <h2 class="text-center">EDIT <%=Product.ProductTitle%></h2>
                    <form action="/cmsviewprod/<%=Product._id%>?_method=PUT" method="POST" enctype="multipart/form-data"required>
                        <div class="form-row">
                          <div class="form-group col-md-6">
                                <label for="exampleInputEmail1">Product Title:</label>
                            <input type="text" class="form-control"   name="ProductTitle" placeholder="Product Title" value="<%=Product.ProductTitle%>">
                          </div>
                          <div class="form-group col-md-6">
                                <label for="exampleInputEmail1">Product Type:</label>
                            <input type="text" class="form-control"   name="ProductType" placeholder="Product Type" value="<%=Product.ProductType%>">
                          </div>
                        </div>
                        <div class="form-group">
                                <label for="comment">Product Price:</label>
                                <input type="number" class="form-control" name = "ProductPrice" placeholder="Product Price"value="<%=Product.ProductPrice%>">
                        </div>
                        <div class="form-group">
                                <label for="comment">Product Size:</label>
                                <input type="text" class="form-control" name = "ProductSize" placeholder="Product Size"value="<%=Product.ProductSize%>">
                        </div>
                        <div class="form-group">
                                <label for="image">Class Image:</label>
                                <input type="file"  id="image" name="Productimage" accept="image/*" required>
                        </div>
                        <div class="form-row">
                          
                          <div class="form-group col-md-4">
                                <label for="comment">Tags:</label>
                                <input type="text" class="form-control" name = "Tags" placeholder="">
                          </div>
                        <div class="form-group col-md-12">
                                <label for="comment">Product Description :</label>
                                <textarea type="text" class="form-control" name = "ProductDescription" placeholder="Product Description">
                                        <%=Product.ProductDescription%>
                                    </textarea>
                        
                        <button type="submit" class="btn btn-primary">SUBMIT</button>
                      </form>
                      <form action="/cmsviewprod/<%=Product._id%>/?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-primary">Delete</button>
                        </form>
                
            </div>
</section>



